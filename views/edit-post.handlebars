<img
  class='hero-img'
  src='/images/worldpoliticallarge.jpg'
  alt="world map with country's name"
/>
<div class='hero container pt-4'>
  <div class='row'>
    <section class='col formDiv'>
      <h2>Edit Post</h2>
      <form class='edit-post-form'>
        <label for='post-title' style="font-size: 20px">Title</label>
        <input
          type='text'
          id='updated-post-title'
          name='post-title'
          class='ctrInput'
          maxlength="40"
          value='{{post.title}}'
        />
        <label for='content' style="font-size: 20px">Text</label>
        <textarea
          name='content'
          id='updated-post-content'
          cols='30'
          rows='10'
          class='ctrInput'
        >{{post.content}}</textarea>
        <div class='alert alert-danger post-alert' id='post-alert'>
          <strong>Must input post title and text!</strong>
        </div>
        <button type='submit' class='btn m-3 submit custom-btn'>Update Post</button>
        <button
          type='button'
          class='delete-post btn m-3 submit custom-btn'
        >Delete Post</button>
        <div id='uploaded-images'></div>
      </form>
        <button id='upload_widget' class='btn m-3 custom-btn'>Upload New Photos</button>
        <div class="preview-images">
      <div id='new-uploaded-images'>
      </div>
    </section>
  </div>
</div>
<script
  src='https://upload-widget.cloudinary.com/global/all.js'
  type='text/javascript'
></script>
<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>