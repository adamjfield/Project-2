<img
  class='hero-img'
  src='/images/worldpoliticallarge.jpg'
  alt="world map with country's name"
/>
<div class='hero container pt-4'>
  <div class='row'>
    <section class='col formDiv'>
      <h2>Edit Post</h2>
      <form class='edit-post-form'>
        <label for='post-title'>Title</label>
        <input
          type='text'
          id='updated-post-title'
          name='post-title'
          class='ctrInput border-primary'
          style='width:75%;font-size:14px;'
          value='{{post.title}}'
        />
        <label for='content'>Text</label>
        <textarea
          name='content'
          id='updated-post-content'
          cols='30'
          rows='10'
          class='ctrInput border-primary'
          style='height:200px;font-size:14pt;width:100%'
        >{{post.content}}</textarea>
        <div class='alert alert-danger post-alert' id='post-alert'>
          <strong>Must input post title and text!</strong>
        </div>
        <button type='submit' class='btn m-3 submit custom-btn'>Update Post</button>
        <button
          type='button'
          class='delete-post btn m-3 submit custom-btn'
        >Delete Post</button>
        <div id='uploaded-images'></div>
      </form>
      <div id='uploaded-images'>
        {{#if photos.length}}
          {{#each photos as |photo|}}
            <img src='{{photo.url}}' class='' />
          {{/each}}
        {{/if}}
      </div>
    </section>
  </div>
</div>

<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>