<img
  class='hero-img'
  src='/images/worldpoliticallarge.jpg'
  alt="world map with country's name"
/>
<div class='hero container pt-4'>
  <div class='row'>
    {{#if posts.length}}
    <section class='formDiv col-lg-6 col-md-12'>
        <h2>Edit Your Posts</h2>
        {{#each posts as |post|}}
          {{> dashboard-postinfo post}}
        {{/each}}
    </section>
    {{/if}}

    <div class='{{#if posts.length}}col-lg-6{{/if}} col-md-12'>
      <section class='formDiv'>
        <h2>Create New Post</h2>
        <form class='new-post-form'>
          <label for='post-title' style="font-size: 20px">Title</label>
          <input
            type='text'
            id='post-title'
            name='post-title'
            class='ctrInput'
            maxlength="40"
          />
          <label for='content' style="font-size: 20px">Text</label>
          <textarea 
            name="content" 
            id="content" 
            cols="30" 
            rows="10"
            class='ctrInput'></textarea>
          <div class='alert alert-danger post-alert' id='post-alert'>
            <strong>Must input post title and text!</strong>
          </div>
          <button type='submit' class='btn m-3 submit custom-btn'>Create</button>
        </form>
          <button id='upload_widget' class='btn m-3 custom-btn'>Upload
          files</button>
        <div class="preview-images">
          <div id="uploaded-images">
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
<script
  src='https://upload-widget.cloudinary.com/global/all.js'
  type='text/javascript'
></script>
<script src='/javascript/add-post.js'></script>