<img
  class='hero-img'
  src='/images/worldpoliticallarge.jpg'
  alt="world map with country's name"
/>
<div class='hero container'>
  <div class='row'>
    <div class='col-lg-6 col-sm-12'>
      <section class='formDiv'>
        <h2>Your Posts</h2>
        <div class='card border-primary'>
          <div class='card-header'>
            <h3>
              <a class='link' href='/dashboard/edit/{{id}}'>Kanapolis State Park</a>
            </h3>
          </div>
        </div>
        <div class='card border-primary'>
          <div class='card-header'>
            <h3>
              <a class='link' href='/dashboard/edit/{{id}}'>Flying R Ranch</a>
            </h3>
          </div>
        </div>
        <div class='card border-primary'>
          <div class='card-header'>
            <h3>
              <a class='link' href='/dashboard/edit/{{id}}'>Yosemite National
                Park</a>
            </h3>
          </div>
        </div>
      </section>
    </div>
    <div class='col-lg-6 col-sm-12'>
      <section class='formDiv'>
        <h2>Create New Post</h2>
        <form class='new-post-form'>
          <label for='post-title'>Title</label>
          <input
            type='text'
            id='post-title'
            name='post-title'
            class='ctrInput w25 border-primary'
            style='width:75%;font-size:14px;'
          />
          <label for='content'>Text</label>
          <input
            id='content'
            name='content'
            class='ctrInput border-primary'
            style='height:200px;font-size:14pt;width:100%'
          />
          <div class='alert alert-danger post-alert' id='post-alert'>
            <strong>Must input post title and text!</strong>
          </div>
          <button type='submit' class='btn m-3 submit'>Create</button>
        </form>
        <button id='upload_widget' class='btn m-3'>Upload
          files</button>
      </section>
    </div>
  </div>
</div>
<script src='/javascript/add-post.js'></script>
<script
  src='https://upload-widget.cloudinary.com/global/all.js'
  type='text/javascript'
></script>
<script type='text/javascript'>
  var myWidget = cloudinary.createUploadWidget({ cloudName: 'my_cloud_name',
  uploadPreset: 'my_preset'}, (error, result) => { if (!error && result &&
  result.event === "success") { console.log('Done! Here is the image info: ',
  result.info); } } )
  document.getElementById("upload_widget").addEventListener("click", function(){
  myWidget.open(); }, false);
</script>